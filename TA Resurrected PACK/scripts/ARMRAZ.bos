	gun = 0;
	uv = FALSE;
	bMoving = FALSE;
	bAiming = FALSE;
	aimtert = FALSE;
	movearms =TRUE;
	restore_delay = 3500;
	headprim = 0;

	dont-cache enrgycell1;
